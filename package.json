{
  "name": "hotloader",
  "version": "1.1.2",
  "description": "A simple template for creating react app using TypeScript with hot reload.",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --exclude 'src/tests/*.{ts,tsx}'",
    "start": "webpack-dev-server",
    "test": "jest",
    "build": "tsc && webpack --progress",
    "clean": "rd /s/q built",
    "prepare": "tsc && webpack --progress --config webpack.prod.config.js",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "author": "Chun Liu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chunliu/typescript-react-hot-reload"
  },
  "dependencies": {
    "@material-ui/core": "^1.0.0",
    "@material-ui/icons": "^1.0.0",
    "@types/classnames": "^2.2.3",
    "@types/fabric": "^1.5.35",
    "@types/lodash": "^4.14.108",
    "@types/prop-types": "^15.5.3",
    "@types/react": "^16.0.40",
    "@types/react-dom": "^16.0.4",
    "@types/react-list": "^0.8.3",
    "@types/react-redux": "^5.0.15",
    "@types/react-router": "^4.0.23",
    "@types/react-router-config": "^1.0.6",
    "@types/react-router-dom": "^4.2.5",
    "@types/recompose": "^0.26.1",
    "antd": "^3.5.2",
    "classnames": "^2.2.5",
    "fabric": "^2.2.4",
    "lodash": "^4.17.10",
    "react": "^16.2.0",
    "react-color": "^2.14.1",
    "react-compose": "^2.0.0",
    "react-dom": "^16.2.0",
    "react-pdf": "^3.0.5",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "tslint-config-prettier": "^1.13.0"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.1",
    "@types/jest": "^22.2.0",
    "@types/node": "^10.1.2",
    "css-loader": "^0.28.11",
    "enzyme": "^3.1.0",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^3.0.7",
    "jest": "^22.4.4",
    "less": "^3.0.1",
    "less-loader": "^4.0.5",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "open-browser-webpack-plugin": "0.0.5",
    "postcss-loader": "^1.1.1",
    "react-test-renderer": "^16.0.0",
    "redux-devtools-extension": "^2.13.2",
    "sass-loader": "^7.0.1",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "ts-import-plugin": "^1.4.3",
    "ts-jest": "^22.4.2",
    "ts-loader": "^4.1.0",
    "tslint": "^5.10.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.6.0",
    "typescript": "^2.8.3",
    "typescript-react-svg-icon-generator": "^1.1.8",
    "url-loader": "^1.0.1",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
